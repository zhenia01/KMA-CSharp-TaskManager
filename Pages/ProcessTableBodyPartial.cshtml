@model List<TaskManager.Entities.RunningProcess>
@for (int i = 0; i < Model.Count; i++)
{
  var process = Model[i];
  <tr>
    <th scope="row">@(i + 1)</th>
    <td class="long-wrap" title="@process.Name">@process.Name</td>
    <td class="process-id">@process.Id</td>
    <td>@process.IsActive</td>
    <td>@process.CpuUsage.ToString("F")</td>
    <td>@process.MemoryUsage.ToString("F")</td>
    <td>@process.ThreadCount</td>
    <td>@process.Username</td>
    <td class="long-wrap" title="@process.FilePath">@process.FilePath</td>
    <td>@process.StartTime</td>
    <td>
      <div class="btn-group-vertical" role="group">
        <button class="btn btn-block btn-secondary btn-sm" data-toggle="thread-list-modal" data-url="@Url.Page("Index", "ThreadList")">
          Threads
        </button>
        <button class="btn btn-block btn-secondary btn-sm" data-toggle="module-list-modal" data-url="@Url.Page("Index", "ModuleList")">
          Modules
        </button>
      </div>
      <div class="btn-group" role="group">
        <button class="btn btn-secondary btn-sm mr-2" data-toggle="open-folder" data-url="@Url.Page("Index", "OpenFolder")">
          <i class="fas fa-folder-open"></i>
        </button>
        <button class="btn btn-danger btn-sm" data-toggle="remove-process" data-url="@Url.Page("Index", "RemoveById")">
          <i class="fas fa-trash-alt"></i>
        </button>
      </div>
    </td>
  </tr>
}